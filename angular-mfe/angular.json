{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "angular-mfe": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",   
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": ["src/styles.scss"]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "sourceMap": true,
              "outputHashing": "all"
            }
          },
          "defaultConfiguration": "development"
        },
        "build-mf": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "polyfills": ["src/polyfills.ts"],
            "outputPath": "dist/angular-mfe",
            "index": "src/index.html",
            "main": "src/main.single-spa.ts", 
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": ["src/styles.scss"],
            "customWebpackConfig": {
              "path": "extra-webpack.config.js"
            }
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "none"
            },
            "development": {
              "optimization": false,
              "sourceMap": true,
              "outputHashing": "none"
            }
          },
          "defaultConfiguration": "development"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "angular-mfe:build:production"
            },
            "development": {
              "buildTarget": "angular-mfe:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "serve-mf": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "browserTarget": "angular-mfe:build-mf:development"
          },
          "configurations": {
            "production": {
              "browserTarget": "angular-mfe:build-mf:production"
            },
            "development": {
              "browserTarget": "angular-mfe:build-mf:development"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  },
  "cli": {
    "analytics": "4d8005d3-1f85-4560-9048-a4810deecccd"
  }
}
